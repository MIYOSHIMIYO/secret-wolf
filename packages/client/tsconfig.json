{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { 
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"],
      "@/pages/*": ["src/pages/*"],
      "@/utils/*": ["src/utils/*"],
      "@/lib/*": ["src/lib/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/state/*": ["src/state/*"],
      "@/types/*": ["src/types/*"],
      "@/assets/*": ["src/assets/*"],
      "@secret/shared/*": ["../shared/src/*"]
    },
    "types": ["vite/client", "node", "react", "react-dom"]
  },
  "include": ["src/**/*", "vite.config.ts", "tailwind.config.ts"],
  "exclude": ["node_modules", "dist"]
} 